{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier",
    "rxjs-tslint-rules"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "no-console": false,
    "deprecation": {
      "severity": "warning"
    },
    "rxjs-no-subject-unsubscribe": {
      "severity": "error"
    },
    "rxjs-no-unsafe-scope": {
      "severity": "error"
    },
    "rxjs-no-unsafe-switchmap": {
      "severity": "error"
    },
    "rxjs-throw-error": {
      "severity": "error"
    }
  }
}